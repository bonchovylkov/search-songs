<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.homeassignment.myapplication" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.homeassignment.myapplication.PlayList"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:launchMode="singleTop"
            android:name="com.homeassignment.myapplication.PlayListBrowse"
            android:label="@string/title_activity_play_list_browse" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>
        <activity
            android:name="com.homeassignment.myapplication.AddNewSong"
            android:label="@string/title_activity_add_new_song" >
        </activity>
        <activity
            android:name="com.homeassignment.myapplication.SongDetails"
            android:label="@string/title_activity_song_details" >
        </activity>
    </application>

</manifest>
